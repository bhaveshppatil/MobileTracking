    <!--</style>-->

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="TextViewSmall">
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="TextViewLarge">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>



    <style name="VidAppCardViewStyle" parent="CardView">
        <item name="cardCornerRadius">@dimen/margin_2dp</item>
        <item name="cardElevation">@dimen/margin_10dp</item>
    </style>


    <style name="EdittextStyle">
        <item name="android:background">@drawable/edittext_border_red</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:padding">@dimen/margin_8dp</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:minHeight">@dimen/margin_40dp</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="ButtonStyleNoBg">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:minHeight">@dimen/margin_40dp</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <style name="ScrollStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarSize">@dimen/margin_4dp</item>
        <item name="android:scrollbarThumbVertical">@color/colorPrimary</item>
    </style>
    <style name="DialogsTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/up</item>
        <item name="android:windowExitAnimation">@anim/down</item>
    </style>
</resources>
