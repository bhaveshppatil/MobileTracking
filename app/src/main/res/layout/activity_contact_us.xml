<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ContactUsActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:text="Contact Us"
            android:textSize="@dimen/text_size_20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/margin_4dp"
        app:cardCornerRadius="@dimen/margin_4dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/margin_16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cont_1"
                android:textColor="@android:color/black"
                android:text="Sahil Mhatre :    "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toEndOf="@+id/cont_1"
                android:text="7721814279"
                android:autoLink="phone"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/margin_4dp"
        app:cardCornerRadius="@dimen/margin_4dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/margin_16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cont_2"
                android:textColor="@android:color/black"
                android:text="Sahil Rane :    "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toEndOf="@+id/cont_2"
                android:text="9975862663"
                android:autoLink="phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>